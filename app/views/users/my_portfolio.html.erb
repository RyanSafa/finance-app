<h1>My Portfolio</h1>

<div class = "search"> 
    <h3>Search for Stocks</h3>
    <%= form_tag search_stock_path, method: :get do%>
        <div class = "form-group row">
            <div class = "col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock Ticker", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class = "form-group col-md-2 align-self-center pl-0">
                <%= button_tag type: :submit, class: "btn btn-success", id: "button-size" do  %>
                    <%= "Search"%>
                <%end%>
            </div>
        </div> 
    <%end%>
</div>
<%if @stock %>
<div class = "card card-header results-block">
    <strong> Symbol </strong> <%=@stock.ticker%></strong>
    <strong> Name </strong> <%=@stock.name%></strong>
    <strong> Price </strong> <%=@stock.last_price%></strong>
</div>
<%end%>